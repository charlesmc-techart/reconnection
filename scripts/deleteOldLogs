#!/bin/zsh

################################################################################
# Delete logs older than two weeks
################################################################################

source "${0:h}/directories.zsh"

deleteOldLogs() {
  find "$1" -type f -name '*.log' -Btime +2w -delete 2>/dev/null
}

for dir in "$@"; do
  if [[ ! -d "$d" ]]; then
    continue
  fi
  find "$dir" -type f -name '*.log' -Btime +2w -delete
done